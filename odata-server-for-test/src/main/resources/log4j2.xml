<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%-5p %d [%t] %c: %m%n" />
    </Console>
  </Appenders>

  <Loggers>
    <AsyncLogger name="org.hawkore" level="INFO" />
    <AsyncRoot level="INFO">
      <AppenderRef ref="Console" />
    </AsyncRoot>
  </Loggers>

</Configuration>
